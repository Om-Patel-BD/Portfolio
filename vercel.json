{
  "version": 2,
  "builds": [
    { "src": "manage.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "^/static/(.*)$", "dest": "/staticfiles/$1" },
    { "src": "^(?!/static/).*", "dest": "/manage.py" }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}

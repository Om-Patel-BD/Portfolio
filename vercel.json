{
  "buildCommand": "pip3 install -r requirements.txt && python3 manage.py collectstatic --noinput",
  "functions": {
    "api/index.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    { "src": "^/static/(.*)$", "dest": "/staticfiles/$1" },
    { "src": "^(?!/static/).*", "dest": "/api/index.py" }
  ]
}
